
#include <iostream>
using namespace std;

int main() {
	// star pattern 12
    int i,j,rows;
    cout<<"enter no of rows:"<<endl;
    cin>>rows;
    for(i=1;i<=rows;i++){
        for(j=1;j<=rows;j++){
            if(j>=i&&j<=rows-i)
            cout<<"*";
            else
            cout<<" ";
        }
        cout<<"\n";
    }
}

